<mvc:View controllerName="sync.e05.ex3review.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:t="sap.ui.table">
    <Page id="page" title="{i18n>title}">
        <content>
            <Panel >
                <t:Table rows="{/ConnectionSet}">
                    <t:columns>
                        <t:Column >
                            <Label text="{i18n>labelCarrid}"/>
                                <t:template>
                                    <ObjectIdentifier 
                                        title="{Carrid}"
                                    />
                                </t:template>
                        </t:Column>

                        <t:Column >
                            <Label text="{i18n>labelConnid}"/>
                                <t:template>
                                    <ObjectIdentifier 
                                        title="{Connid}"
                                    />
                                </t:template>
                        </t:Column>

                        <t:Column >
                            <Label text="{i18n>labelCityfrom}"/>
                                <t:template>
                                    <!-- 출발도시(출발국가) -->
                                    <Text text="{Cityfrom}({Countryfr})" />
                                </t:template>
                        </t:Column>
                        
                        <t:Column >
                            <Label text="{i18n>labelCityto}"/>
                                <t:template>
                                    <!-- 출발도시(출발국가) -->
                                    <Text text="{Cityto}({Countryto})" />
                                </t:template>
                        </t:Column>
                                            
                        <t:Column >
                            <Label text="{i18n>labelFltime}"/>
                                <t:template>
                                    <!-- 출발시간 ~ 도착시작 -->
                                    <Text text="{ path: 'Deptime', type: 'sap.ui.model.odata.type.Time', formatOptions: { pattern: 'HH:mm:ss' } } ~ {Arrtime}" />
                                </t:template>
                        </t:Column>
                                            
                        <t:Column >
                            <Label text="{i18n>labelDistance}"/>
                                <t:template>
                                    <ObjectNumber number="{
                                        path: 'Distance',
                                        type: 'sap.ui.model.odata.type.Decimal'
                                    }" unit="{Distid}" />
                                </t:template>
                        </t:Column>

                    </t:columns>
                </t:Table>
            </Panel>
        </content>

        <footer>

            <OverflowToolbar >
                <ToolbarSpacer />
                <Button 
                    icon="sap-icon://create" 
                    text="신규생성" 
                    type="Accept" 
                    press="onCreate" />

            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
