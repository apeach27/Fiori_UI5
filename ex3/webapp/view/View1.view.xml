<mvc:View controllerName="sync.e05.ex3.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:l="sap.ui.layout">

    <Page id="page" title="{i18n>title}">
        <Toolbar>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button text="생성" press="onCreate" type="Accept" />
            </OverflowToolbar>
        </Toolbar>
        <content>
            <Title text="항공편 정보" />
            <t:Table visibleRowCount="15" rows="{/ConnectionSet}" enableBusyIndicator="true">
                
                <t:columns>
                    <!-- 컬럼 제목과 데이터 -->
                    <t:Column width="7rem" hAlign="Center">
                        <Label design="Bold" text="{i18n>labelCarrid}" />
                        <t:template>
                            <ObjectIdentifier title="{Carrid}"/>
                        </t:template>
                    </t:Column>
                    <t:Column width="7rem" hAlign="Center">
                        <Label design="Bold" text="{i18n>labelConnid}" />
                        <t:template>
                            <ObjectIdentifier title="{Connid}"/>
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label design="Bold" text="{i18n>labelCityfrom}" />
                        <t:template>
                            <Text text="{Cityfrom}"/>
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label design="Bold" text="{i18n>labelCityto}" />
                        <t:template>
                            <Text text="{Cityto}"/>
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label design="Bold" text="{i18n>labelFltime}" />
                        <t:template>
                            <Text text="{Deptime} ~ {Arrtime}"/>
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label design="Bold" text="{i18n>labelDistance}" />
                        <t:template>
                            <ObjectNumber 
                                number="{Distance}"
                                unit="{Distid}"
                            /> 
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>

        </content>
    </Page>
</mvc:View>
