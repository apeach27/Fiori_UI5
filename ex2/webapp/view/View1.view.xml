<mvc:View controllerName="sync.e05.ex2.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:l="sap.ui.layout">
    <Page id="page" title="{i18n>title}">
        <content>
            <Title text="항공편 정보" />
            <t:Table id="idTable" 
            visibleRowCount="15" 
            rows="{/flightSet}"
            mode="SingleSelectMaster"  selectionChange="onSelectionChange" >
                <t:columns>
                    <t:Column >
                        <Label text="{i18n>labelCarrid}" />
                        <t:template>
                            <ObjectIdentifier title="{Carrid}" />
                        </t:template>
                    </t:Column>
                    <t:Column >
                        <Label text="{i18n>labelConnid}" />
                        <t:template>
                            <ObjectIdentifier title="{Connid}" />
                        </t:template>
                    </t:Column>
                    <t:Column >
                        <Label text="{i18n>labelFldate}" />
                        <t:template>
                            <ObjectIdentifier text="{Fldate}" />
                        </t:template>
                    </t:Column>
                    <t:Column >
                        <Label text="{i18n>labelPrice}" />
                        <t:template>
                            <ObjectNumber 
                            number="{Price}"
                            unit="{Currency}"
                        /> 
                        </t:template>
                    </t:Column>
                    <t:Column >
                        <Label text="{i18n>labelPlanetype}" />
                            <t:template>
                            <Text text="{Planetype}" />
                        </t:template>
                    </t:Column>
                    <t:Column >
                        <Label text="{i18n>labelSeatsmax}" />
                            <t:template>
                            <Text text="{Seatsmax}" />
                        </t:template>
                    </t:Column>
                    <t:Column >
                        <Label text="{i18n>labelReserved}" />
                            <t:template>
                            <Text text="{= ${Seatsmax} - ${Seatsocc} }" />
                        </t:template>
                    </t:Column>
                    <t:Column >
                        <Label text="{i18n>labelSeatsocc}" />
                            <t:template>
                            <Text text="{Seatsocc}" />
                        </t:template>
                    </t:Column>
                    <t:Column >
                        <Label text="{i18n>labelPaymentsum}" />
                        <t:template>
                            <ObjectNumber 
                            number="{Paymentsum}"
                            unit="{Currency}"
                        /> 
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>
        </content>
    </Page>
</mvc:View>
