<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <Dialog id="idDialog" title="항공편 정보">
        <content>
            <f:SimpleForm layout="ResponsiveLayout">
                <Label text="항공사ID" /><Text text="{Carrid}" />
                <Label text="항공편번호" /><Text text="{Connid}" />
                <Label text="출발지" /><Text text="{Cityto}" />
                <Label text="도착지" /><Text text="{Cityfrom}" />
                <Label text="비행시간" /><Text text="{Fltime}" />

                <Label text="출발시간" />
                <TimePicker value="{
                    path: 'Deptime',
                    type: 'sap.ui.model.odata.type.Time',
                    formatOptions:{
                        pattern: 'HH:mm:ss'
                    }
                }" editable="false" />
                
                <Label text="도착시간" />
                <Text text="{
                    path: 'Arrtime',
                    type: 'sap.ui.model.odata.type.Time',
                    formatOptions:{
                        pattern: 'HH:mm:ss'
                    }
                }" />
                
                <Label text="비행거리" />
                <ObjectNumber 
                    number="{Distance}"
                    unit="{Distid}"
                /> 
                <Label text="비행기간" /><Text text="{Period}" />
            </f:SimpleForm>
        </content>

        <beginButton>
            <Button text="닫기" press="onClosePress" />
        </beginButton>
        <buttons></buttons>
        <endButton></endButton>
    </Dialog>


</c:FragmentDefinition>