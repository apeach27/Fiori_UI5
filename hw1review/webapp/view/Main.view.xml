<mvc:View controllerName="sync.e05.hw1review.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <Table id="idTable" items="{/ConnSet}">
                <columns>
                    <Column>
                        <Label text="항공사"></Label>
                    </Column>
                    <Column>
                        <Label text="항공편 번호"></Label>
                    </Column>
                    <Column>
                        <Label text="출발국가"></Label>
                    </Column>
                    <Column>
                        <Label text="출발도시"></Label>
                    </Column>
                    <Column>
                        <Label text="도착국가"></Label>
                    </Column>
                    <Column>
                        <Label text="도착도시"></Label>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem >
                        <cells>
                            <!-- 키필드를 표현하기 위한 ObjectIdentifier -->
                            <ObjectIdentifier title="{Carrid}" />
                            <ObjectIdentifier title="{Connid}" />

                            <ObjectAttribute text="{Countryfr}" />
                            <ObjectAttribute text="{Cityfrom}" />

                            <Text text="{Countryto}"/>
                            <Text text="{Cityto}"/>
                        </cells>
                    </ColumnListItem>
                </items>

            </Table>

        </content>
    </Page>
</mvc:View>
